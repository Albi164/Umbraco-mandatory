@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
}
<doctype html>

<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title></title>
    <meta name="description" content="@Umbraco.Field("metaDescription")">
    <meta name="author" content="">
    <meta name="keywords" content="@Umbraco.Field("metaKeywords")">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style type="text/css">
        img{
            max-width:100%;
            height:auto;
            padding-left: 20px;
            padding-right: 20px;
        }
        p{
            padding-left: 20px;
            padding-right: 20px;
        }
        a:hover {
            text-decoration: none;
            color: darkblue;
            font-weight:bold;
        }
        a{
            color: black;
        }
        a:visited{
            text-decoration: none;
            color:black;
        }
        h1, h2, h3, h4, h5, h6{
            padding-left:20px;
            padding-right:20px;
        }
        form{
            padding-left: 20px;
            padding-right: 20px;
        }
        fieldset{
            padding-left:20px;
            padding-right:20px;
        }

    </style>
</head>
<body>

    <div id="header-container">
        <header class="wrapper clearfix">
            
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                @Umbraco.RenderMacro("mainMenu")
                </div>
                </div>
            </nav>
            
        </header>
    </div>
    <div class="jumbotron container-fluid"style="background-image: url(/img/infinityBridge.png);background-size: cover;">>
  
      
    <h1 class="display-4">Aarhus developer corporation</h1>
    <p class="lead">Corporation of webdevelopers that are breaking through newest technology</p>
  
</div>


    @RenderBody()

    </div>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="js/libs/modernizr-2.0.6.min.js"></script>
</body>
</html>